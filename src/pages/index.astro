---
// index.astro - Página principal de Zumgo
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header/Header.astro'
import Hero from '../components/Hero/Hero.astro'
---

<Layout
  title="Zumgo - El zumo que esperas, sin esperas"
  description="Descubre los mejores zumos naturales sin aditivos. Calidad premium que puedes sentir en cada sorbo."
>
  <Header />

  <main>
    <Hero />

    <!-- Secciones futuras -->
    <section
      id="que-es"
      style="height: 100vh; background: #f0f0f0; display: flex; align-items: center; justify-content: center; scroll-margin-top: 120px;"
    >
      <h2>Qué es Zumgo</h2>
    </section>

    <section
      id="donde-funciona"
      style="height: 100vh; background: #e0e0e0; display: flex; align-items: center; justify-content: center; scroll-margin-top: 120px;"
    >
      <h2>Dónde funciona</h2>
    </section>

    <section
      id="maquina"
      style="height: 100vh; background: #d0d0d0; display: flex; align-items: center; justify-content: center; scroll-margin-top: 120px;"
    >
      <h2>Quiero una máquina</h2>
    </section>

    <section
      id="contacto"
      style="height: 100vh; background: #c0c0c0; display: flex; align-items: center; justify-content: center; scroll-margin-top: 120px;"
    >
      <h2>Contacto</h2>
    </section>
  </main>
</Layout>
