---
// index.astro - Página principal de Zumgo
import Layout from '../layouts/Layout.astro'
---

<Layout title="Zumgo - Home" description="Bienvenido a Zumgo, tu nueva web">
  <main>
    <div class="container">
      <section class="hero">
        <h1>¡Bienvenido a Zumgo!</h1>
        <p>
          Tu proyecto Astro está configurado y listo para empezar a desarrollar.
        </p>
        <div class="status-grid">
          <div class="status-item">
            <h3>✅ Astro</h3>
            <p>Configurado correctamente</p>
          </div>
          <div class="status-item">
            <h3>🎨 Estilos</h3>
            <p>Sistema de diseño preparado</p>
          </div>
          <div class="status-item">
            <h3>📁 Estructura</h3>
            <p>Carpetas organizadas</p>
          </div>
          <div class="status-item">
            <h3>🚀 Siguiente</h3>
            <p>Crear componentes</p>
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  .hero {
    padding: var(--space-20) 0;
    text-align: center;
  }

  .hero h1 {
    color: var(--color-forest);
    margin-bottom: var(--space-6);
  }

  .hero p {
    font-size: var(--font-size-lg);
    color: var(--color-gray-600);
    margin-bottom: var(--space-12);
  }

  .status-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-6);
    margin-top: var(--space-12);
  }

  .status-item {
    padding: var(--space-6);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    transition:
      transform var(--transition-base),
      box-shadow var(--transition-base);
  }

  .status-item:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .status-item h3 {
    margin-bottom: var(--space-3);
    font-size: var(--font-size-xl);
  }

  .status-item p {
    margin-bottom: 0;
    color: var(--color-gray-600);
  }
</style>
